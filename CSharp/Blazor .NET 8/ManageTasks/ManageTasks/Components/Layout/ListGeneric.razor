@typeparam Titem

@if(List == null)
{
	if (Loading == null)
	{
		<text>Loading</text>
	}
	else
	{
		@Loading
	}
}
else if (!List.Any())
{
	if(NoData == null)
	{
		<text>Not exists Tasks</text>
	}
	else
	{
		@NoData
	}
}
else
{
	foreach (var item in List)
	{
		@ListItem(item)
	}
}

@code {
	[Parameter] public RenderFragment Loading { get; set; }
	[Parameter] public RenderFragment NoData { get; set; }
	[Parameter] public List<Titem> List { get; set; }
	[Parameter] public RenderFragment<Titem> ListItem { get; set; }
}